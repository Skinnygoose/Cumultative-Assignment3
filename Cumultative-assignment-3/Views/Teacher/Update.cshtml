
@{
    ViewBag.Title = "Update";
}

@model CUMULITATIVE_ASSIGN_1.Models.Teacher
<div id="containershow">
    <nav>
        <a clss="navlink" href=" /Teacher/Show/@Model.teacherid">Back</a>
    </nav>

    <h2>Update Teacher</h2>
    <form method="post" action="/Teacher/Update/@Model.teacherid">
        <div>
            <label for="teacherfname">First Name:</label>
            <input type="text" id="teacherfname" name="teacherfname" value="@Model.teacherfname"/>

        </div>
        <div>
            <label for="teacherlname">Last Name:</label>
            <input type="text" id="teacherlname" name="teacherlname" value="@Model.teacherlname" />

        </div>
        <div>
            <label for="teacherid">Teacher ID:</label>
            <input type="text" id="teacherid" name="teacherid"  value="@Model.teacherid"/>
        </div>
        <div>
            <label for="employeenumber">Employee Number:</label>
            <input type="number" id="employeenumber" name="employeenumber"  value="@Model.employeenumber"/>

        </div>
        <div>
            <label for="hiredate">Hire Date:</label>
            <input type="datetime" id="Hiredate" name="hiredate" value="@Model.hiredate" />

        </div>
        <div>
            <label for="Salary">Salary:</label>
            <input type="number" id="Hiredate" name="salary" value="@Model.salary" />

        </div>
        <div>
            <input type="submit" value="Update Teacher" />
        </div>
    </form>
</div>

